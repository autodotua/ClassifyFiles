<local:DialogWindowBase
    x:Class="ClassifyFiles.UI.UpdateFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:m="http://schemas.modernwpf.com/2019"
 xmlns:local="clr-namespace:ClassifyFiles.UI"
        mc:Ignorable="d"
    Closing="WindowBase_Closing"
        Title="更新文件" Height="280" Width="600">
    <m:SimpleStackPanel Spacing="16" Margin="8" Orientation="Vertical" VerticalAlignment="Center">
        <m:SimpleStackPanel x:Name="stkSettings" Spacing="8" Orientation="Vertical">
            <CheckBox x:Name="chkResearch" IsChecked="True">重新搜索物理文件</CheckBox>
            <CheckBox x:Name="chkIncludeThumbnails" IsChecked="False" Margin="12,0" IsEnabled="{Binding IsChecked,ElementName=chkResearch}">生成缩略图</CheckBox>
            <CheckBox x:Name="chkReclassify" IsChecked="True">重新根据匹配条件进行自动分类</CheckBox>
        </m:SimpleStackPanel>
        <m:SimpleStackPanel Spacing="8" Orientation="Vertical" >
            <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
            <ProgressBar Minimum="0" Maximum="1" Value="{Binding Percentage}"/>
            <Button HorizontalAlignment="Right" Click="Button_Click">开始</Button>
        </m:SimpleStackPanel>
    </m:SimpleStackPanel>
</local:DialogWindowBase>

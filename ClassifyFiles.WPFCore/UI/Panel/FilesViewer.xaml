<UserControl x:Class="ClassifyFiles.UI.Panel.FilesViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassifyFiles.UI.Panel"
             mc:Ignorable="d" 
                  xmlns:component="clr-namespace:ClassifyFiles.UI.Component"
    xmlns:ui="clr-namespace:ClassifyFiles.UI"
                 xmlns:m="http://schemas.modernwpf.com/2019"
xmlns:app="clr-namespace:ClassifyFiles"
             
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        xmlns:wpftk="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"

             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ui:MagnificationConverter x:Key="mc"/>
        <ui:NotFirst2VisibilityConverter x:Key="i2v"/>
        <ui:Bool2VisibilityConverter x:Key="b2v"/>
        <ui:IsNotNull2BoolConverter x:Key="nn2b"/>
        <ui:IsNotNull2VisibilityConverter x:Key="nn2v"/>
        <sys:Double x:Key="two">2.0</sys:Double>
        <ContextMenu x:Key="menu" Opened="ContextMenu_Opened"  Closed="ContextMenu_Closed">
        </ContextMenu>

        <ToolTip x:Key="toolTip">
            <m:SimpleStackPanel Spacing="8">
                <component:FileIcon EnableCache="False" Square="False" File="{Binding .,Mode=OneTime}" Scale="-144"/>
                <TextBlock FontWeight="Bold" Text="{Binding Display.DisplayName}"/>
                <TextBlock Text="{Binding Display.DisplayDir}"/>
            </m:SimpleStackPanel>
        </ToolTip>

        <!--图标视图模板-->
        <DataTemplate x:Key="grdIconView">
            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="0,8">
                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  ToolTip="{StaticResource toolTip}">
                    <TextBlock DockPanel.Dock="Bottom" FontSize="{Binding Size.FontSize}" 
                               Visibility="{Binding  Path=Display.ShowIconViewNames, Converter={StaticResource b2v}}" 
                               Text="{Binding Path=Display.DisplayName, Mode=OneTime}"
                               Margin="0,8,0,0" HorizontalAlignment="Center" TextWrapping="Wrap" LineHeight="16" Height="32" 
                               MaxWidth="{Binding Size.IconSize, Converter={StaticResource mc}, ConverterParameter={StaticResource two}}"/>
                    <component:FileIcon Scale="2.0" File="{Binding .}"  
                                        Height="{Binding Size.IconSize, Converter={StaticResource mc}, ConverterParameter={StaticResource two}}" 
                                        Width="{Binding Size.IconSize, Converter={StaticResource mc}, ConverterParameter={StaticResource two}}"/>
                </DockPanel>
            </Border>
        </DataTemplate>
        
        <!--平铺视图模板-->
        <DataTemplate x:Key="grdTileView">
            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="0,0,0,4">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" ToolTip="{StaticResource toolTip}" Height="{Binding Size.TotalTileViewHeight}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="144"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding Path=Display.DisplayName, Mode=OneTime}"
                                 HorizontalAlignment="Left" TextWrapping="Wrap" />
                    <TextBlock Grid.Column="2" Grid.Row="3" Text="{Binding Display.DisplayDir,Mode=OneTime}"
                               Foreground="Gray" TextWrapping="Wrap" FontSize="{Binding Size.SmallFontSize}"  Visibility="{Binding Display.ShowTileViewPaths, Converter={StaticResource b2v}}"/>
                    <component:TagGroup Grid.ColumnSpan="99" File="{Binding .}" Orientation="Horizontal" 
                                        Grid.RowSpan="99" HorizontalAlignment="Right" VerticalAlignment="Bottom" TagMouseDown="Tags_MouseDown"/>
                    <component:FileIcon Scale="2.0" File="{Binding .}" Grid.RowSpan="99" 
                                        Height="{Binding Size.IconSize, Converter={StaticResource mc}, ConverterParameter={StaticResource two}}" 
                                        Width="{Binding Size.IconSize, Converter={StaticResource mc}, ConverterParameter={StaticResource two}}"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!--列表和树状视图模板-->
        <HierarchicalDataTemplate  ItemsSource="{Binding SubUIFiles}"   x:Key="listDataTemplate">
            <Grid Margin="0,4,24,4"  ToolTip="{StaticResource toolTip}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <component:FileIcon File="{Binding .}" Grid.RowSpan="99" />
                <TextBlock Text="{Binding Display.DisplayName}" Grid.Column="2" Grid.ColumnSpan="3" FontWeight="Bold"/>
                <TextBlock Text="{Binding Display.Length}"  Grid.Column="2" Grid.Row="2" Width="108"
                                   Foreground="{ DynamicResource SystemControlBackgroundBaseMediumHighBrush}"/>
                <TextBlock Text="{Binding Display.DisplayDir}" Grid.Column="4" Grid.Row="2" 
                                   Foreground="{ DynamicResource SystemControlBackgroundBaseMediumBrush}"/>
                <!--横向的标签列表-->
                <component:TagGroup Grid.Column="99" Grid.RowSpan="99" File="{Binding .}" TagMouseDown="Tags_MouseDown"/>
            </Grid>
        </HierarchicalDataTemplate>

        <!--图标和平铺视图-->
        <ListView  x:Key="grdFiles" ContextMenu="{StaticResource menu}"
                      PreviewMouseDoubleClick="lvwFiles_PreviewMouseDoubleClick"  
                         ItemsSource="{Binding Files}"  >
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <wpftk:VirtualizingWrapPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListView>

        <!--列表视图-->
        <m:ListView ItemsSource="{Binding Files}" x:Key="lvwFiles" SelectionMode="Extended"
                    PreviewMouseDoubleClick="lvwFiles_PreviewMouseDoubleClick"
                        ContextMenu="{StaticResource menu}"  ItemTemplate="{StaticResource listDataTemplate}">
            <m:ListView.ItemContainerStyle >
                <Style TargetType="{x:Type m:ListViewItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </m:ListView.ItemContainerStyle>
        </m:ListView>

        <!--树状图-->
        <TreeView x:Key="treeFiles"  ContextMenu="{StaticResource menu}" PreviewMouseRightButtonDown="treeFiles_PreviewMouseRightButtonDown"
                                          Grid.Row="4"  ItemsSource="{Binding FileTree}" PreviewMouseDoubleClick="lvwFiles_PreviewMouseDoubleClick"
                   ItemTemplate="{StaticResource listDataTemplate}"/>
        
        <!--详细信息视图-->
        <ListView ItemsSource="{Binding Files}" x:Key="lvwDetailFiles" SelectionMode="Extended"
                    PreviewMouseDoubleClick="lvwFiles_PreviewMouseDoubleClick"
                        ContextMenu="{StaticResource menu}"  Style="{StaticResource {x:Static GridView.GridViewStyleKey}}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource {x:Static GridView.GridViewItemContainerStyleKey}}">
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </ListView.ItemContainerStyle>
          
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="" Width="32">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid ToolTip="{StaticResource toolTip}">
                                    <component:FileIcon File="{Binding .}" Scale="-24"/>
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="文件名" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock ToolTip="{StaticResource toolTip}" Text="{Binding Display.DisplayName}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="文件夹路径" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock ToolTip="{StaticResource toolTip}" Text="{Binding Display.DisplayDir}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="分类" Width="144">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <component:TagGroup File="{Binding .}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="大小" DisplayMemberBinding="{Binding Display.Length}"/>
                    <GridViewColumn Header="修改时间" DisplayMemberBinding="{Binding Display.FileInfo.LastWriteTime}"/>
                    <GridViewColumn Header="创建时间" DisplayMemberBinding="{Binding Display.FileInfo.CreationTime}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </UserControl.Resources>
    <Grid  Margin="8,4,0,4" PreviewMouseWheel="ListBox_PreviewMouseWheel" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <m:AutoSuggestBox
                    Grid.Column="0"
                        x:Name="txtSearch"
                        PlaceholderText="{Binding Files.Count, StringFormat={}文件总数：{0:}}"
                        TextChanged="SearchTextBox_TextChanged"
                        QueryIcon="Find"
                        QuerySubmitted="SearchTextBox_QuerySubmitted"
                        SuggestionChosen="SearchTextBox_SuggestionChosen" 
                    VerticalAlignment="Center"/>
            <m:ProgressRing Grid.Column="4" x:Name="progress"/>
            <Grid x:Name="grdAppBar" Grid.Column="99" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <m:AppBarToggleButton Grid.Column="3"  Label="列表"  Click="ViewTypeButton_Click" Tag="1" >
                    <m:AppBarToggleButton.Icon>
                        <m:FontIcon Glyph="&#xF168;" />
                    </m:AppBarToggleButton.Icon>
                </m:AppBarToggleButton>
                <m:AppBarToggleButton Grid.Column="4" Label="图标" Click="ViewTypeButton_Click" Tag="2">
                    <m:AppBarToggleButton.Icon>
                        <m:FontIcon Glyph="&#xF0E2;" />
                    </m:AppBarToggleButton.Icon>
                </m:AppBarToggleButton>  
                <m:AppBarToggleButton Grid.Column="5" Label="平铺" Click="ViewTypeButton_Click" Tag="3">
                    <m:AppBarToggleButton.Icon>
                        <m:FontIcon    Glyph="&#xE8BC;" />
                    </m:AppBarToggleButton.Icon>
                </m:AppBarToggleButton>
                <m:AppBarToggleButton Grid.Column="6"  Label="树型"  Click="ViewTypeButton_Click" Tag="4">
                    <m:AppBarToggleButton.Icon>
                        <m:FontIcon Glyph="&#xED25;" />
                    </m:AppBarToggleButton.Icon>
                </m:AppBarToggleButton>     
                <m:AppBarToggleButton Grid.Column="7"  Label="详细信息"  Click="ViewTypeButton_Click" Tag="5">
                    <m:AppBarToggleButton.Icon>
                        <m:FontIcon Glyph="&#xE8FD;" />
                    </m:AppBarToggleButton.Icon>
                </m:AppBarToggleButton>
                <TextBlock
                        x:Name="Control5Output"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center" />
            </Grid>
        </Grid>

        <ContentControl Grid.Row="4" Content="{Binding FilesContent}"/>
    </Grid>
</UserControl>

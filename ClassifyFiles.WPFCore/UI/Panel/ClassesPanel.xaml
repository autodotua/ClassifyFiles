<ui:UserControlBase  xmlns:ui="clr-namespace:ClassifyFiles.UI"
                     x:Class="ClassifyFiles.UI.Panel.ClassesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassifyFiles.UI.Panel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ui:Bool2VisibilityConverter x:Key="b2v"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                 ItemsSource="{Binding Items}"
                 SelectedItem="{Binding SelectedItem}"
                  DisplayMemberPath="Name"></ListBox>

        <Button Content="显示全部文件" Visibility="{Binding AllFilesButtonVisiable, Converter={StaticResource b2v}}"
                x:Name="btnAllFiles" Click="btnAllFiles_Click"
                Grid.Row="2" HorizontalAlignment="Stretch"/>
    </Grid>
</ui:UserControlBase>

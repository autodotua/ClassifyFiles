<local:UserControlBase x:Class="ClassifyFiles.UI.ProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassifyFiles.UI"
             mc:Ignorable="d"      Background="#66AAAAAA" 
                       xmlns:ui="http://schemas.modernwpf.com/2019"    Visibility="Collapsed" >

    <UserControl.Resources>
        <SolidColorBrush x:Key="SystemControlHighlightAccentBrush" Color="{StaticResource SystemAccentColor}" />
    </UserControl.Resources>
    <Grid    >
        <ui:ProgressRing
        x:Name="ring"
        Width="60"
        Height="60"/>
    </Grid>
 
</local:UserControlBase>

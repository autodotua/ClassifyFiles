<UserControl x:Class="ClassifyFiles.UI.ProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassifyFiles.UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" x:Name="uc">

    <materialDesign:DialogHost  x:Name="dialog"  CloseOnClickAway="False"
               Grid.RowSpan="999" Grid.ColumnSpan="999"
                                    OverlayBackground="Gray">
        <materialDesign:DialogHost.DialogContent>
            <ProgressBar
          Style="{DynamicResource MaterialDesignCircularProgressBar}"
          HorizontalAlignment="Center"
          Margin="16"
          IsIndeterminate="True"
          Value="0" />
        </materialDesign:DialogHost.DialogContent>
    </materialDesign:DialogHost>

</UserControl>

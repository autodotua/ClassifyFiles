<local:DialogWindowBase
    x:Class="ClassifyFiles.UI.Dialog.AddFilesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:m="http://schemas.modernwpf.com/2019"
 xmlns:local="clr-namespace:ClassifyFiles.UI.Dialog"
        mc:Ignorable="d"
    Closing="WindowBase_Closing"
        Title="更新文件" Height="340" Width="600">
    <m:SimpleStackPanel Spacing="16" Margin="8" Orientation="Vertical" VerticalAlignment="Center">
        <m:SimpleStackPanel x:Name="stkSettings" Spacing="8" Orientation="Vertical">
            <CheckBox x:Name="chkIncludeThumbnails" IsChecked="True" >生成缩略图</CheckBox>
            <CheckBox x:Name="chkIncludeExplorerIcons" IsChecked="True" >生成资源管理器图标</CheckBox>
            <TextBlock>对于文件夹：</TextBlock>
            <RadioButton x:Name="rbtnFolderAsFile" IsChecked="True" Margin="12,0">作为一个文件项</RadioButton>
            <RadioButton x:Name="rbtnFolderIgnore" Margin="12,0">忽略</RadioButton>
            <RadioButton x:Name="rbtnFolderImportFiles" Margin="12,0">导入文件夹内的文件</RadioButton>
        </m:SimpleStackPanel>
        <m:SimpleStackPanel Spacing="8" Orientation="Vertical" >
            <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
            <ProgressBar Minimum="0" Maximum="1" Value="{Binding Percentage}"/>
            <Button HorizontalAlignment="Right" Click="Button_Click">开始</Button>
        </m:SimpleStackPanel>
    </m:SimpleStackPanel>
</local:DialogWindowBase>
